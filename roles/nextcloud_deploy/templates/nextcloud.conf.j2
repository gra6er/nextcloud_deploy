<VirtualHost *:80>
	  DocumentRoot /var/www/html/nextcloud/
      {% if nc_ext_ip is defined %}
      ServerName  {{ nc_ext_ip }}
      {% else %}
      ServerName  {{ nc_ip }}
      {% endif %}

	  <Directory /var/www/html/nextcloud/>
	    Require all granted
	    AllowOverride All
	    Options FollowSymLinks MultiViews

	    <IfModule mod_dav.c>
	      Dav off
	    </IfModule>

	  </Directory>
	</VirtualHost>